@page "/not-authorized"

<MudContainer MaxWidth="MaxWidth.ExtraSmall"
			  Class="d-flex flex-column justify-center align-center"
			  Style="min-height: 70vh;">
	<MudCard Elevation="25" Class="pa-6" Style="text-align: center;">
		<MudCardContent>
			<MudAvatar Color="Color.Error" Size="Size.Large" Class="mb-4" />
			<MudText>You're not authorized</MudText>
			<MudText Class="mb-4">
				Sorry, you don't have permission to view the page.
				@if (!string.IsNullOrWhiteSpace(Message))
				{
					<br />
					@Message
				}
			</MudText>
			<MudButton OnClick="GoHome" Variant="Variant.Filled"
					   Color="Color.Primary">
				<MudIcon Icon="@Icons.Material.Filled.ArrowBack" Class="mr-2" />
				Got To Home
			</MudButton>
		</MudCardContent>
	</MudCard>
</MudContainer>

