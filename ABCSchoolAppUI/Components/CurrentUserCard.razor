<MudCard Elevation="0" Square="true" Class="mt-n2">
	@if (_isLoading)
	{
		<MudCardContent>
			<MudProgressCircular Color="Color.Primary"
								 Size="Size.Medium"
								 Indeterminate="true" />
		</MudCardContent>
	}
	else
	{
		<MudCardHeader>
			<CardHeaderAvatar>
				<MudAvatar Color="Color.Secondary">
					@UserNameInitial
				</MudAvatar>
			</CardHeaderAvatar>
			<CardHeaderContent>
				<MudText Typo="Typo.body2">@FirstName @LastName</MudText>
				<MudText Typo="Typo.caption">@Email</MudText>
			</CardHeaderContent>
		</MudCardHeader>
	}
</MudCard>