@page "/user-roles/{UserId}"
@using ABCShared.Library.Constants

@attribute [ShouldHavePermission(SchoolAction.Read, SchoolFeature.UserRoles)]

<Header OnReturn="ReturnToUsersPage" Title="@_title" Description="@_description" />

<MudTable Items="_userRoleList"
		  Loading="_isLoading"
		  LoadingProgressColor="Color.Info"
		  Elevation="25">
	<ToolBarContent>
		@if (_canUpdateUserRoles)
		{
			<MudButton OnClick="UpdateUserRolesAsync"
					   Variant="Variant.Filled"
					   Color="Color.Primary">
				Update User Roles
			</MudButton>
		}
	</ToolBarContent>
	<HeaderContent>
		<MudTh>Name</MudTh>
		<MudTh>Description</MudTh>
		<MudTh>IsAssigned</MudTh>
	</HeaderContent>
	<RowTemplate>
		<MudTd>@context.Name</MudTd>
		<MudTd>@context.Description</MudTd>
		<MudTd>
			<MudCheckBox @bind-Value="@context.IsAssigned"
						 Disabled="@(!_canUpdateUserRoles)"
						 Color="Color.Secondary" />
		</MudTd>
	</RowTemplate>
	<PagerContent>
		<MudTablePager RowsPerPageString="RowsPerPageString" InfoFormat="InfoFormat" />
	</PagerContent>
</MudTable>
