<MudForm @ref="_form" Model="SubscriptionRequest">
	<MudDialog>
		<TitleContent>
			<MudText Typo="Typo.h6">
				<MudIcon Icon="@Icons.Material.Filled.Upgrade"
						 Class="mr-3 mb-n1" />
				Upgrade Subscription
			</MudText>
		</TitleContent>
		<DialogContent>
			<MudGrid>
				<MudItem xs="12" md="6">
					<MudTextField @bind-Value="SubscriptionRequest.TenantId"
								  ReadOnly
								  Margin="Margin.Dense"
								  Variant="Variant.Outlined"
								  Label="Tenant Key" />
				</MudItem>
				<MudItem xs="12" md="6">
					<MudDatePicker @bind-Date="NewExpiryDatePicker"
								   Margin="Margin.Dense"
								   Variant="Variant.Outlined"
								   Label="New Expiry Date" />
				</MudItem>
			</MudGrid>
		</DialogContent>
		<DialogActions>
			<MudButton OnClick="CancelDialog" Class="mr-auto" Variant="Variant.Filled">
				<MudIcon Icon="@Icons.Material.Filled.Close" />
				Cancel
			</MudButton>
			<MudButton Onclick="UpgradeSubscriptionAsync" Color="Color.Primary" Variant="Variant.Filled">
				<MudIcon Icon="@Icons.Material.Filled.Save" />
				Upgrade Subscription
			</MudButton>
		</DialogActions>
	</MudDialog>
</MudForm>
